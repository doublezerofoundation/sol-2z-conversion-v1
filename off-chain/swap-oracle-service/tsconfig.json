{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "target": "es2020",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": [
          "node",
          "mocha"
      ],
      "outDir": "./lib",
      "baseUrl": "./src",
      "esModuleInterop": true
  },
  "include": [
      "src/**/*",
  ],
  "exclude": [
      "node_modules",
      "lib",
      "test"
  ]
}