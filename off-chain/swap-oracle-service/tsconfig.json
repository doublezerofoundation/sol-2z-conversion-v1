{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "declaration": true,
      "resolveJsonModule": true,
      "target": "es2020",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    "types": [
        "node"
    ],
      "outDir": "./lib",
      "baseUrl": "./src",
      "esModuleInterop": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "lib"
  ]
}